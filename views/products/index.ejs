
<%- include ("../partials/header") %> 
<%- include ("../partials/navbar") %> 

<div class="container">
  <section>
    <h3>Shopping cart</h3>
  </section>
  <%- include ("../partials/flash") %> 
  <div class="row product">
    <%for(let product of x){%>
        <div class="col-lg-3">
          <div class="card" style="width: 18rem; padding: 5px;">
            <img src="<%=product.img%>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%=product.name%></h5>
              
              <p class="card-text"><%=product.desc.substring(0,70)%></p>
              <a href="/products/<%= product._id %> " class="btn btn-outline-primary">More Info</a>
            </div>
          </div>


        </div>

    <%}%>
  </div>


</div>


  <%- include ("../partials/footer") %> 
