
<%- include ("../partials/header") %> 
<%- include ("../partials/navbar") %> 


<div class="container" style="margin-top: 3rem; width: 80vw ">
  <form class="validated-form" action="/products/<%= products._id %>?_method=PATCH" method="POST" style="max-width:70%; margin: 10px auto;" novalidate>
    <div class="mb-3">
      <label for="Name" class="form-label">Name</label>
      <input type="text" class="form-control" id="Name" placeholder="Product Name" name="product[name]" value="<%= products.name %> " required>
      
    </div>
    <div class="mb-3">
      <label for="img" class="form-label">Image Url</label>
      <input type="text" class="form-control" id="img" placeholder="Image URL" name="product[img]" value="<%= products.img %>" required>
    </div>
    <div class="mb-3">
      <label for="price" class="form-label">Price</label>
      <input type="number" required class="form-control" id="price" placeholder="Price" name="product[price]" value="<%= products.price %>">
    </div>
    <div class="mb-3">
      <label for="desc" class="form-label">Description</label>
      <textarea id="desc" required class="form-control" cols="30" rows="5" name="product[desc]"><%= products.desc %></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>


</div>



<%- include ("../partials/footer") %> 
